{
  "name": "leisuretask",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @leisuretask/backend",
    "w": "pnpm --filter @leisuretask/webapp",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache",
    "typecheck": "concurrently -n backend,webapp -c red,blue \"pnpm -r --filter @leisuretask/backend typecheck\" \"pnpm -r --filter @leisuretask/webapp typecheck\"",
    "prettify": "pnpm -r --parallel prettify",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
