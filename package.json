{
  "name": "leisuretask",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "b": "pnpm --filter @leisuretask/backend",
    "w": "pnpm --filter @leisuretask/webapp",
    "sh": "pnpm --filter @leisuretask/shared",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --config eslint.config.js",
    "typecheck": "concurrently -n backend,webapp,shared -c red,blue,green \"pnpm -r --filter @leisuretask/backend typecheck\" \"pnpm -r --filter @leisuretask/webapp typecheck\" \"pnpm -r --filter @leisuretask/shared typecheck\"",
    "prettify": "pnpm -r --parallel prettify",
    "dcc": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- bash -c 'docker compose config'",
    "dcb": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- bash -c 'docker compose build'",
    "dcu": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- bash -c 'docker compose up'",
    "dth": "docker tag leisuretask-image registry.heroku.com/leisuretaskonline/web",
    "hl": "heroku login && heroku container:login",
    "dph": "docker push registry.heroku.com/leisuretaskonline/web",
    "hr": "heroku container:release web -a leisuretaskonline",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv-cli": "^8.0.0",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^3.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-transform-paths": "^3.5.5"
  }
}
