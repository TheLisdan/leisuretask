{
  "name": "@leisuretask/backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch -r dotenv/config ./src/index.ts --watch ./src/emails/dist",
    "build-emails": "rimraf ./src/emails/dist && shx mkdir -p ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles -u 1 ./src/emails/dist/*.html ./dist",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "start": "node ./dist/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache",
    "typecheck": "tsc --noEmit --project ./tsconfig.json",
    "prepare": "pnpm pgc"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@leisuretask/shared": "workspace:*",
    "@prisma/client": "^6.6.0",
    "@trpc/server": "^10.45.2",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "trpc-playground": "^1.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.14",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "chokidar": "^4.0.3",
    "prisma": "^6.6.0",
    "shx": "^0.4.0",
    "tsx": "^3.0.0"
  }
}
