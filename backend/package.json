{
  "name": "@leisuretask/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "tsx --watch -r dotenv/config ./src/index.ts --watch ./src/emails/dist",
    "test": "jest",
    "clean": "rimraf ./dist",
    "build-emails": "rimraf ./src/emails/dist && shx mkdir -p ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "tsc --build ./tsconfig.json",
    "build": "pnpm clean && pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "sentry-release": "dotenv -- bash -c 'sentry-cli releases new ${SOURCE_VERSION} --finalize --org leisuretask --project backend --auth-token ${SENTRY_AUTH_TOKEN}'",
    "sentry-sourcemaps": "dotenv -- bash -c 'sentry-cli releases files ${SOURCE_VERSION} upload-sourcemaps ./dist --org leisuretask --project backend'",
    "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
    "start": "node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache",
    "typecheck": "tsc --noEmit --project ./tsconfig.json",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@leisuretask/shared": "workspace:*",
    "@leisuretask/webapp": "workspace:*",
    "@prisma/client": "^6.6.0",
    "@sentry/node": "^9.19.0",
    "@trpc/server": "^10.45.2",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "cron": "^4.3.0",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "serialize-error": "8.1.0",
    "triple-beam": "^1.4.1",
    "trpc-playground": "^1.0.4",
    "winston": "^3.17.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@sentry/cli": "^2.45.0",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.14",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "chokidar": "^4.0.3",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.7.0",
    "shx": "^0.4.0",
    "tsx": "^3.0.0"
  }
}
