generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  IN_PROGRESS
  COMPLETED
  FAILED
}

model User {
  id String @id @default(cuid())
  name String @unique
  passwordHash String
  createdAt DateTime @default(now())
}

model Task {
  id        String   @id @default(cuid())
  title     String
  status    TaskStatus  @default(IN_PROGRESS)
  createdAt DateTime @default(now())
}